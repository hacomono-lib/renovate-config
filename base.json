{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    "packages:stylelint",
    ":widenPeerDependencies",
    ":label(renovate)",
    ":semanticCommitScopeDisabled"
  ],
  "schedule": ["after 10am on monday", "before 5pm on monday"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "platformAutomerge": true,
  "labels": ["renovate"]
}
