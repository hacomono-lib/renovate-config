{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "npm": {
    "extends": [
      ":noUnscheduledUpdates",
      "npm:unpublishSafe",
      "helpers:disableTypesNodeMajor",
      ":widenPeerDependencies"
    ],
    "postUpdateOptions": ["yarnDedupeFewer"],
    "rangeStrategy": "bump",
    "semanticCommitType": "chore",
    "separateMinorPatch": true,

    "patch": {
      "enabled": true,
      "automerge": true
    },
    "labels": ["renovate:npm"],

    "packageRules": [
      {
        "groupName": "eslint and prettier",
        "matchPackageNames": ["eslint", "prettier"],
        "matchPackagePrefixes": ["eslint-", "@eslint", "prettier-"],
        "labels": ["renovate:lint", "renovate:eslint", "renovate:prettier"]
      },
      {
        "groupName": "storybook",
        "matchPackageNames": ["storybook", "chromatic"],
        "matchPackagePrefixes": ["@storybook"],
        "labels": ["renovate:storybook"]
      },
      {
        "groupName": "vue frameworks",
        "matchPackageNames": ["vue", "volar", "vue-tsc"],
        "matchPackagePrefixes": ["@vue"],
        "labels": ["renovate:vue"]
      },
      {
        "groupName": "nuxt frameworks",
        "matchPackageNames": ["nuxt"],
        "matchPackagePrefixes": ["@nuxt", "@vueuse"],
        "labels": ["renovate:nuxt"]
      },
      {
        "groupName": "markuplint",
        "matchPackageNames": ["markuplint"],
        "matchPackagePrefixes": ["@markuplint"],
        "labels": ["renovate:lint", "renovate:markuplint"]
      }
    ]
  }
}
